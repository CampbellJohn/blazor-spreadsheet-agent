<div class="top-row ps-3 navbar navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Spreadsheet Agent</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home me-2" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="file-upload">
                <span class="oi oi-cloud-upload me-2" aria-hidden="true"></span> Upload Spreadsheet
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="queries">
                <span class="oi oi-magnifying-glass me-2" aria-hidden="true"></span> Query Data
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="chat">
                <span class="oi oi-chat me-2" aria-hidden="true"></span> Natural Language Query
            </NavLink>
        </div>
        <div class="nav-item px-3 mt-auto">
            <div class="nav-link">
                <div class="small text-muted">v1.0.0</div>
            </div>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
